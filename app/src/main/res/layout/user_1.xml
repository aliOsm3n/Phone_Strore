<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:padding="7dp"
    android:background="@color/background_color"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/chat_room_image"
        android:layout_height="@dimen/chat_room_image"
        android:src="@drawable/man"
        android:id="@+id/user_1_id"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="@dimen/chat_room_margin_end"
        android:background="@drawable/b"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="10dp"
            android:lineSpacingMultiplier="2"
            android:id="@+id/message_content"
            android:layout_gravity="center"
            android:text="محمد خالد على زايد"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018 25/5 12:00pm"
            android:layout_gravity="end"
            android:id="@+id/msg_time"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            />



    </LinearLayout>
</LinearLayout>