<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.AddFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:padding="@dimen/filter_root_margin"
        >


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/b"
                android:padding="@dimen/filter_sub_root_padding"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="10"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/type"
                        android:id="@+id/type"
                        android:layout_weight="2.2"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:layout_marginEnd="15dp"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7.8"
                        android:orientation="vertical"
                        >

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#FFF"
                            android:id="@+id/spinner_select_type"
                            ></Spinner>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_bg_image"
                            android:hint="@string/select_type"
                            android:padding="@dimen/spinner_padding"
                            android:textSize="15sp"
                            android:textColor="@color/text_color"
                            android:id="@+id/add_fr_select_type"
                            android:textAlignment="center"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="10"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/model"
                        android:id="@+id/model"
                        android:layout_weight="2.2"
                        android:textColor="@color/text_color"
                        android:textSize="15sp"
                        android:layout_marginEnd="15dp"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7.8"
                        android:orientation="vertical"
                        >

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#FFF"
                            android:id="@+id/spinner_select_model"
                            ></Spinner>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_bg_image"
                        android:hint="@string/sel_model"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:textAlignment="center"
                        android:id="@+id/add_fr_select_model"
                        android:padding="@dimen/spinner_padding"
                        />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_marginTop="20dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:id="@+id/phone_price"
                        android:layout_weight="2.2"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:layout_marginEnd="15dp"
                        />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_border"
                        android:layout_weight="4"
                        android:lines="1"
                        android:maxLength="5"
                        android:textColor="@color/text_color"
                        android:inputType="number"
                        android:id="@+id/add_fr_from"
                        android:textAlignment="center"
                        android:padding="@dimen/spinner_padding"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/status"
                        android:id="@+id/phone_status"
                        android:layout_weight="2.2"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:layout_marginEnd="15dp"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="7.8"
                        android:gravity="center"
                        android:weightSum="2"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/check_box_bg_image"
                                android:layout_marginStart="20dp"
                                android:textSize="18sp"
                                android:id="@+id/check_box_new"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mobile_new"
                                android:textColor="@color/text_color"
                                android:textSize="15sp"
                                android:id="@+id/new_phone"
                                android:layout_marginStart="10dp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/uncheck_box_bg_image"
                                android:layout_marginStart="20dp"
                                android:textSize="18sp"
                                android:id="@+id/check_box_used"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mobile_used"
                                android:textColor="@color/text_color"
                                android:textSize="15sp"
                                android:id="@+id/used_phone"
                                android:layout_marginStart="10dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="10"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.2"
                        android:id="@+id/storage"
                        android:text="@string/storage"
                        android:textColor="@color/text_color"
                        android:textSize="15sp"
                        android:layout_marginEnd="15dp"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7.8"
                        android:orientation="vertical"
                        >

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#FFF"
                            android:id="@+id/spinner_select_storage"
                            ></Spinner>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_bg_image"
                            android:hint="@string/select_storage"
                            android:textColor="@color/text_color"
                            android:id="@+id/add_fr_select_storage"
                            android:textSize="15sp"
                            android:textAlignment="center"
                            android:padding="@dimen/spinner_padding"
                            />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="10"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.2"
                        android:text="@string/color"
                        android:textSize="15sp"
                        android:id="@+id/color"
                        android:textColor="@color/text_color"
                        android:layout_marginEnd="15dp"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7.8"
                        android:orientation="vertical"
                        >

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#FFF"
                            android:id="@+id/spinner_select_color"
                            ></Spinner>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_bg_image"
                            android:hint="@string/mobile_select_color"
                            android:id="@+id/select_color"
                            android:textAlignment="center"
                            android:textColor="@color/text_color"
                            android:padding="@dimen/spinner_padding"
                            />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:weightSum="10"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.2"
                        android:id="@+id/city"
                        android:text="@string/city"
                        android:textColor="@color/text_color"
                        android:textSize="15sp"
                        android:layout_marginEnd="15dp"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7.8"
                        android:orientation="vertical"
                        >

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#FFF"
                            android:id="@+id/spinner_select_city"
                            ></Spinner>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_bg_image"
                            android:hint="@string/select_city"
                            android:textColor="@color/text_color"
                            android:id="@+id/add_fr_select_city"
                            android:textSize="15sp"
                            android:textAlignment="center"
                            android:padding="@dimen/spinner_padding"
                            />

                    </LinearLayout>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                        android:id="@+id/ads_images"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="10"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.2"
                        android:text="@string/add_images"
                        android:id="@+id/add_image_txt"
                        android:textColor="@color/text_color"
                        android:textSize="15sp"
                        android:layout_marginEnd="15dp"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/add_image_bg_image"
                        android:layout_weight="7.8"
                        android:id="@+id/add_phone_image"
                        android:textAlignment="center"
                        android:padding="@dimen/spinner_padding"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:weightSum="10"
                    android:gravity="top"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.2"
                        android:layout_gravity="center"
                        android:text="@string/about_phone"
                        android:id="@+id/about_phone"
                        android:textColor="@color/text_color"
                        android:textSize="15sp"
                        android:layout_marginEnd="15dp"
                        />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:background="@drawable/rounded_border"
                        android:layout_weight="7.8"
                        android:hint="@string/about_phone"
                        android:inputType="textMultiLine"
                        android:scrollbars="none"
                        android:textAlignment="center"
                        android:textColor="@color/text_color"
                        android:id="@+id/about_phone_content"
                        android:padding="@dimen/spinner_padding"
                        />

                </LinearLayout>
                <Button
                    android:layout_width="250dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/order_price_button_bg"
                    android:text="@string/add_ads"
                    android:id="@+id/add_fr_add_ads"
                    android:textColor="#FFF"
                    android:layout_marginBottom="40dp"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:paddingTop="5dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>