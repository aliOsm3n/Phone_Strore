<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ui.activity.FilterActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/app_bar"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#374D79"
                android:text="@string/search"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_margin="@dimen/filter_root_margin"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/b"
            android:padding="@dimen/filter_sub_root_padding"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="10"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/type"
                    android:id="@+id/type"
                    android:textColor="@color/text_color"
                    android:layout_weight="2.2"
                    android:textSize="15sp"
                    android:layout_marginEnd="15dp"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.8"
                    android:orientation="vertical"
                    >

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFF"
                        android:id="@+id/spinner_select_type"
                        ></Spinner>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_bg_image"
                        android:hint="@string/select_type"
                        android:id="@+id/select_type"
                        android:textColor="@color/text_color"
                        android:textAlignment="center"
                        android:padding="@dimen/spinner_padding"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="10"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mobile_model"
                    android:layout_weight="2.2"
                    android:textSize="15sp"
                    android:id="@+id/model"
                    android:textColor="@color/text_color"
                    android:layout_marginEnd="15dp"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.8"
                    android:orientation="vertical"
                    >

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFF"
                        android:id="@+id/spinner_select_model"
                        ></Spinner>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_bg_image"
                        android:hint="@string/mobile_select_model"
                        android:textColor="@color/text_color"
                        android:id="@+id/select_model"
                        android:textAlignment="center"
                        android:padding="@dimen/spinner_padding"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:id="@+id/phone_price"
                    android:layout_weight="2.2"
                    android:textSize="15sp"
                    android:textColor="@color/text_color"
                    android:layout_marginEnd="15dp"
                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_border"
                    android:layout_weight="4"
                    android:maxLength="5"
                    android:lines="1"
                    android:inputType="number"
                    android:id="@+id/add_price"
                    android:textAlignment="center"
                    android:padding="@dimen/spinner_padding"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/status"
                    android:id="@+id/phone_status"
                    android:layout_weight="2.2"
                    android:textSize="15sp"
                    android:textColor="@color/text_color"
                    android:layout_marginEnd="15dp"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="7.8"
                    android:gravity="center"
                    android:weightSum="2"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/uncheck_box_bg_image"
                            android:layout_marginStart="20dp"
                            android:textSize="18sp"
                            android:id="@+id/check_box_new"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mobile_new"
                            android:textColor="@color/text_color"
                            android:textSize="15sp"
                            android:id="@+id/new_phone"
                            android:layout_marginStart="10dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/uncheck_box_bg_image"
                            android:layout_marginStart="20dp"
                            android:textSize="18sp"
                            android:id="@+id/check_box_used"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mobile_used"
                            android:textColor="@color/text_color"
                            android:textSize="15sp"
                            android:id="@+id/used_phone"
                            android:layout_marginStart="10dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="10"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.2"
                    android:text="@string/mobile_color"
                    android:textSize="15sp"
                    android:id="@+id/color"
                    android:textColor="@color/text_color"
                    android:layout_marginEnd="15dp"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.8"
                    android:orientation="vertical"
                    >

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFF"
                        android:id="@+id/spinner_select_color"
                        ></Spinner>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_bg_image"
                        android:hint="@string/mobile_select_color"
                        android:id="@+id/select_color"
                        android:textAlignment="center"
                        android:textColor="@color/text_color"
                        android:padding="@dimen/spinner_padding"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:weightSum="10"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.2"
                    android:text="@string/mobile_memory"
                    android:textSize="15sp"
                    android:id="@+id/storage"
                    android:textColor="@color/text_color"
                    android:layout_marginEnd="15dp"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.8"
                    android:orientation="vertical"
                    >

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFF"
                        android:id="@+id/spinner_select_storage"
                        ></Spinner>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_bg_image"
                        android:hint="@string/mobile_select_memory"
                        android:id="@+id/select_storage"
                        android:textAlignment="center"
                        android:textColor="@color/text_color"
                        android:padding="@dimen/spinner_padding"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:weightSum="10"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.2"
                    android:text="@string/mobile_city"
                    android:textSize="15sp"
                    android:id="@+id/city"
                    android:textColor="@color/text_color"
                    android:layout_marginEnd="15dp"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.8"
                    android:orientation="vertical"
                    >

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFF"
                        android:id="@+id/spinner_select_city"
                        ></Spinner>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_bg_image"
                        android:hint="@string/mobile_select_city"
                        android:id="@+id/select_city"
                        android:textAlignment="center"
                        android:textColor="@color/text_color"
                        android:padding="@dimen/spinner_padding"
                        />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="250dp"
                android:layout_height="36dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/order_price_button_bg"
                android:text="@string/do_search"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:id="@+id/search"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </ScrollView>

    </LinearLayout>

